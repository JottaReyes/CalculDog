<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFD980"
    tools:context=".Calculator$PlaceholderFragment">


    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate"
        android:id="@+id/buttonCalculate"
        android:background="#FFC641"
        android:layout_centerVertical="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_title"
        android:gravity="center"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="90dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/editTextDogAge"
        android:gravity="center"
        android:maxLength="2"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignLeft="@+id/buttonCalculate"
        android:layout_alignStart="@+id/buttonCalculate"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textViewResult"
        android:gravity="center"
        android:layout_below="@+id/buttonCalculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_dog1"
        android:layout_above="@+id/textViewResult"
        android:layout_alignRight="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle"
        android:layout_below="@+id/editTextDogAge" />


</RelativeLayout>
